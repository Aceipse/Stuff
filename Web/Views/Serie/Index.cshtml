@model IEnumerable<Core.DomainModel.Serie>

@{
    ViewBag.Title = "Series";
}

<h2>Series</h2>
<div class="row">
    <div class="pull-left add-padding">
        @Html.ActionLink("Create New Serie", "Create", new { }, new { @class = "btn btn-primary" })
    </div>
    <div class="pull-left add-padding">
        @Html.ActionLink("Check for new episodes", "Check", new { }, new { @class = "btn btn-primary" })
    </div>
    <div class="pull-left add-padding">
        @if ((string)Session["FacebookId"] == "948395601842199")
        {
            @Html.ActionLink("Import from txt", "Import", new { }, new { @class = "btn btn-primary" })

        }
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Episode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Episode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SerieId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.SerieId }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>